{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "**/assetlinks.json",
        "destination": "/.well-known/assetlinks.json",
        "type": 301
      },
      {
        "source": "**/apple-app-site-association",
        "destination": "/.well-known/apple-app-site-association",
        "type": 301
      }
    ],
    "headers": [
      {
        "source": "**/.well-known/**",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ]
      }
    ]
  },
  "functions": {
  }
}
